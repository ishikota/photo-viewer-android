<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="photo"
            type="com.ishikota.photoviewerandroid.ui.photodetail.PhotoDetailAdapter.Item.PhotoItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/photo"
            android:foreground="?android:selectableItemBackground"
            app:imageFromUrl="@{photo.entity.urls.regular}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="200dp"
            tools:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_image"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/user_thumbnail"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/photo"
                app:clipToCircle="@{true}"
                app:imageFromUrl="@{photo.entity.user.profileImage.medium}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_image"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{photo.entity.user.userName}"
                tools:text="@tools:sample/full_names" />

        </LinearLayout>

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_favorite_black_24dp"
            android:foreground="?android:selectableItemBackground"
            android:text="@{Integer.toString(photo.entity.likes)}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/user_container"
            app:layout_constraintLeft_toRightOf="@id/user_container"
            app:layout_constraintRight_toLeftOf="@id/download_count"
            app:layout_constraintTop_toTopOf="@id/user_container"
            tools:text="1124" />

        <TextView
            android:id="@+id/download_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_file_download_black_24dp"
            android:foreground="?android:selectableItemBackground"
            android:text="@{Integer.toString(photo.entity.downloads)}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/user_container"
            app:layout_constraintLeft_toRightOf="@id/like_count"
            app:layout_constraintRight_toLeftOf="@id/icon_share"
            app:layout_constraintTop_toTopOf="@id/user_container"
            tools:text="1124" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/ic_share_black_24dp"
            android:contentDescription="@string/icon"
            app:layout_constraintBottom_toBottomOf="@id/user_container"
            app:layout_constraintLeft_toRightOf="@id/download_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
